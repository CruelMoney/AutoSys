<Page
    x:Class="StudyConfigurationUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pickers="using:Windows.Storage.Pickers"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <StackPanel x:Name="contentPanel" Margin="8,32,0,0">
            <Button Click="OnOpenStudy" Margin="20,20,0,0">Create Study For Team</Button>
            <TextBox x:Name="teamid" Margin="20,0,1000,20"></TextBox>
            <Button Click="OnOpenStudyWithStudy" Margin="20,20,0,0">Open existing study by iD</Button>
            <TextBox x:Name="studyid"  Margin="20,0,1006,20"></TextBox>

        </StackPanel>
    </Grid>
</Page>